{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "esm": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}